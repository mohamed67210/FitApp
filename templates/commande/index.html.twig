{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock stylesheets %}
{% block title %}Creation de commande{% endblock %}

{% block body %}
<main class="container">
    <h3>Creation de la commande</h3>
    {{form_start(CommandeForm)}}
    <div class="form-group">
        <label>Entrez votre adresse de facturation</label>
        {{form_row(CommandeForm.adresseFacturation)}}
    </div>
    <div class="form-group">
        <label>Pays</label><br>
        {{form_row(CommandeForm.paysFacturation)}}
        <p><small>Comme exigé par la loi, Justrine prélève les taxes sur les transactions applicables aux achats réalisés dans certaines juridictions fiscales.</small></p>
    </div>
    {{form_end(CommandeForm)}}
</main>


{% endblock %}
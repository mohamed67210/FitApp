{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main class="container">
    <form class="authentification_form" method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% endif %}

        <h1>Connectez-Vous </h1>
        <div class="input_container">
            <label for="inputEmail">Saisissez votre e-mail :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="" autocomplete="email"
                required autofocus>
        </div>
        <div class="input_container">
            <label for="inputPassword">Saisissez votre mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="" autocomplete="current-password" required>
        </div>
        <a href="#">Mot de passe oubli√© ?</a>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="btn_auth" type="submit">
            Se Connecter
        </button>
    </form>
</main>
{% endblock %}
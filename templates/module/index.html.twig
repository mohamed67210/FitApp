{% extends 'base.html.twig' %}

{% block title %}Hello ModuleController!{% endblock %}

{% block body %}
{# {{ dump(modules.0.video) }} #}
<main class="container_modules">
    <section id="modules_list">
        {% for module in modules %}
            <article id="module_container">
                <div id="video">
                    <i class="fa-sharp fa-solid fa-circle-play"></i>
                    <video src="{{ asset('assets/videos/modules/'~ module.video ~'') }}" muted ></video>
                </div>
                <div id="module_info">
                    <h4>{{module.intitule}}</h4>
                    <p>{{module.description}}</p>
                </div>
                <div class="btn_panel"><i class="fa-solid fa-trash"></i></div>
            </article>
        {% endfor %}

    </section>
</main>
{% endblock %}
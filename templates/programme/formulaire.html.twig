{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock stylesheets %}
{% block title %}Nouveau programme{% endblock title %}
{% block body %}
<main class="container">
    <h3>Nouveau Programme</h3>
    <div id="inputes_container">
        {{form_start (formProgramme)}}

        {{form_end (formProgramme)}}
    </div>
    {% if programme.image == null %}
    {% else %}
    <h3>Image de programme</h3>
    <div class="programme_img_container">
        <p>image actuelle </p>
        <img src="{{ asset('assets/images/programmes/'~ programme.image ~'') }}" alt="programme.intitule">
    </div>
    {% if programme %}
    <h3><a class="btn_achat" href="{{ path('add_module',{'id':programme.id}) }}">Ajouter un cour</a></h3>
    {% endif %}
    <section>

    </section>
    {% endif %}

</main>
{% endblock body %}
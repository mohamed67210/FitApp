{% extends 'base.html.twig' %}
{% block title %}Liste des diplomes non verifiés{% endblock %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock stylesheets %}
{% block body %}
<div class="admin_container">
    <div class="row">
        {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border-light bg-white p-2">
            {% if diplomes is defined %}
            <h1>liste des diplomes non verifiés</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Intitulé</th>
                        <th scope="col">Coach</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% for diplome in diplomes %}
                    <tr>
                        <th scope="row">{{diplome.id}}</th>
                        <td><img class="image_panel_admin" src="{{asset('assets/images/diplomes/'~ diplome.image ~'')}}"
                                alt="{{diplome.intitule}}"></td>
                        <td>{{diplome.intitule}}</td>
                        <td>{{diplome.user}}</td>

                        <td><a class="btn btn-primary"
                                href="{{path('admin_diplomes_activer',{'id':diplome.id})}}">Activer</a>
                            <a class="btn btn-danger delete-article" href="{{path('admin_diplomes_supprimer',{'id':diplome.id})}}">Supprimer</a>
                        </td>
                    </tr>

                    {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </main>
    </div>
</div>
{% endblock %}
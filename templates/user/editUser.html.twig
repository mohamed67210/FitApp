{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock stylesheets %}
{% block title %}Modifier mon profile{% endblock %}

{% block body %}
<main class="container">
    <h2>Edite profile</h2>
    {{form_start (formUser)}}
    <div class="form-group">
        {{form_row(formUser.prenom)}}
    </div>
    <div class="form-group">
        {{form_row(formUser.nom)}}
    </div>
    <div class="form-group">
        {{form_row(formUser.image)}}
        {% if app.user.image != 'defaultUser.png' %}
            <a href="{{path('remove_image')}}">Supprimer l'image</a>
        {% endif %}
    </div>
    {{form_end (formUser)}}
    <br><br>
    {% if app.user %}
        <a class="btn btn-danger delete-compte" href="{{path('delete_compte')}}">Supprimer mon compte</a>
    {% endif %}
</main>
{% endblock body %}